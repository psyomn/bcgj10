<?xml version="1.0" encoding="UTF-8" standalone="yes" ?>
<ws>
    <settings>
        <stage width="1366px" height="768px" create="yes" center="yes" resize="yes" />
        <triggers />
    </settings>
    <assets>
        
        <background name="bg" src="../../assets/images/Rainbow_A_01.jpg" width="100%" height="100%" />
        
        <textbox name="tb" cssid="tb" />
        
        <character name="n" textbox="tb"></character>
        
    </assets>
    <scenes>

        <scene id="never">
            <show asset="bg" />
            <show asset="tb" />
            <line s="n">You should never get here!</line>
        </scene>
                        
        <scene id="start">
            <show asset="bg" />
            <show asset="tb" />
            <getBacktrace />
            <line s="n" stop="false">{$backtrace}<br /></line>
            <shake asset="bg" />
            <wait />
            <sub scene="scene2" />
        </scene>
        
        <scene id="scene2">
            <getBacktrace />
            <line s="n" stop="false">{$backtrace}<br /></line>
            <shake asset="bg" />
            <wait />
            <break />
            <restart />
        </scene>
        
    </scenes>
</ws>
